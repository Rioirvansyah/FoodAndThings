<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.example.rioir.fat.EditData">
    <TextView
        android:id="@+id/menuFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Menu Makanan"
        />

    <EditText
        android:id="@+id/editMenuUpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuFood"
        android:inputType="text" />

    <TextView
        android:id="@+id/asalFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:textSize="20dp"
        android:text="Asal Daerah" />
    <EditText
        android:id="@+id/editAsalUpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asalFood"
        android:layout_alignStart="@+id/asalFood"
        android:inputType="text"/>

    <TextView
        android:id="@+id/hargaFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:text="Harga Makanan" />

    <EditText
        android:id="@+id/editHargaUpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hargaFood"
        android:layout_alignStart="@+id/hargaFood"
        android:inputType="text"/>

    <TextView
        android:id="@+id/deskripsiFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editHargaUpt"
        android:layout_marginTop="19dp"
        android:text="Deskripsi Makanan"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editDeskripsiUpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deskripsiFood"
        android:layout_alignStart="@+id/deskripsiFood"
        android:inputType="text"/>

    <Button
        android:id="@+id/pilihGambar"
        android:layout_width="132dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editDeskripsiUpt"
        android:layout_marginTop="18dp"
        android:text="Choose File" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Edit" />

    <Button
        android:id="@+id/kembaliBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="kembali" />
</RelativeLayout>
