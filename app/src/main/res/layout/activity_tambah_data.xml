<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.example.rioir.fat.TambahData">

    <TextView
        android:id="@+id/menuFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Menu Makanan"
        />

    <EditText
        android:id="@+id/editMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuFood"
        android:inputType="text" />

    <TextView
        android:id="@+id/asalFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:textSize="20dp"
        android:text="Asal Daerah" />
    <EditText
        android:id="@+id/editAsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asalFood"
        android:layout_alignStart="@+id/asalFood"
        android:inputType="text"/>

    <TextView
        android:id="@+id/hargaFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:text="Harga Makanan" />

    <EditText
        android:id="@+id/editHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hargaFood"
        android:layout_alignStart="@+id/hargaFood"
        android:inputType="text"/>

    <TextView
        android:id="@+id/deskripsiFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editHarga"
        android:layout_marginTop="13dp"
        android:text="Deskripsi Makanan"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deskripsiFood"
        android:layout_alignStart="@+id/deskripsiFood"
        android:inputType="text"/>

    <Button
        android:id="@+id/pilihGambar"
        android:layout_width="132dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editDeskripsi"
        android:layout_marginTop="21dp"
        android:text="Choose File" />
    <Button
        android:id="@+id/simpanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editHarga"
        android:layout_alignParentBottom="true"
        android:text="simpan"/>
    <Button
        android:id="@+id/kembaliBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kembali"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editHarga"/>
</RelativeLayout>
